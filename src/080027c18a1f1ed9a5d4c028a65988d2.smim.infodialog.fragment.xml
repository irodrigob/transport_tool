<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <Dialog
            title="{infoDialog>/Title}"
            state="{infoDialog>/State}"
            type="Message">
        <content>
           <text text="{infoDialog>/Text}"/>
        </content>
        <beginButton>
            <Button
                    text="{i18n>infoDialog.infoDialogCloseButtonText}"
                    press="onCloseInfoDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>